@model Vehicles.API.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<link rel="stylesheet" href="~/css/ResetPWStyle.css" />

<div class="row2">
    <div class="contenedor2">
        <h1 class="centrado">@ViewData["Title"]</h1>
    </div>
</div>

<br />

<div class="row">
    <div class="col-md-12">
        <form method="post">
            
            <input type="hidden" asp-for="Token" />

            <div class="form-group2">
                <div class="form-group">
                    <input asp-for="UserName" class="form-control" placeholder="Email" />



                </div>
                <div>
                    <span asp-validation-for="UserName" class="text-warning"></span>
                </div>

                <div class="form-group">

                    <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />

                </div>
                <div>
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>

                <div class="form-group">

                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirmar contraseña" />

                </div>
                <div>
                    <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                </div>
            </div>

         

            

            <div class="form-group3">



                <button type="submit" value="Recuperar Contraseña" class="btn btn-primary "><span>Recuperar Contraseña</span><span><i class="fas fa-unlock"></i></span> </button>
                <a asp-action="Login" class="btn btn-secondary"><span>Iniciar sesión</span><span><i class="fas fa-sign-in-alt"></i></span></a>


            </div>

        </form>

        <div class="text-success">
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}