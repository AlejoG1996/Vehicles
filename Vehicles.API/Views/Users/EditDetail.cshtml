@model Vehicles.API.Models.DetailViewModel

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0" />
<link rel="stylesheet" href="~/css/DetailVehicleStyle.css" />
<div class="row_1">
    <div class="col-md-12">
        <form asp-action="EditDetail">

            <input type="hidden" asp-for="HistoryId" />
            <h2>Editar Procedimiento</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-12 ">
                    <div class="form-group2">
                        <div class="form-group">
                            <label asp-for="ProcedureId" class="control-label"></label>
                        </div>
                        <div class="form-group">
                            <select style="background-color:transparent !important" asp-for="ProcedureId" asp-items="Model.Procedures" class="form-control"></select>
                        </div>
                        <div>
                            <span asp-validation-for="ProcedureId" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group2">
                        <div class="form-group">
                            <label asp-for="Remarks" class="control-label"></label>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Remarks" class="form-control"></textarea>
                        </div>
                        <div>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group2">
                        <div class="form-group">
                            <label asp-for="LaborPrice" class="control-label"></label>
                        </div>
                        <div class="form-group">
                            <input asp-for="LaborPrice" class="form-control" />
                        </div>
                        <div>
                            <span asp-validation-for="LaborPrice" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group2">
                        <div class="form-group">
                            <label asp-for="SparePartsPrice" class="control-label"></label>
                        </div>
                        <div class="form-group">
                            <input asp-for="SparePartsPrice" class="form-control" />
                        </div>
                        <div>
                            <span asp-validation-for="SparePartsPrice" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-md-12">



                        <div class="form-group">
                            <button type="submit" value="" class="btn btn-success"><span>Guardar</span><span><i class="fas fa-download"></i></span> </button>
                            <a asp-action="DetailsHistory" asp-route-id="@Model.HistoryId" class="btn btn-secondary"><span>Regresar</span><span><i class="fas fa-undo"></i></span></a>

                        </div>
                    </div>


                </div>

            </div>


        </form>
    </div>
</div>
<br />
<br />
<br />
<br />
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}