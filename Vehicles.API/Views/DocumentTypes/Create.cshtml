@model Vehicles.API.Data.Entities.DocumentType

@{
    ViewData["Title"] = "Create";
}
<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0" />
<link rel="stylesheet" href="~/css/DocumentTypeStyle.css" />



<br />

<div class="content_form">
    <div class="row">
        <hr />
        <div class="col-md-12">
            <form asp-action="Create">
                <h4>Nuevo Tipo de Documento</h4>

                <div asp-validation-summary="ModelOnly" class="text-danger errorinicio"></div>

               

                <div class="form-group2">
                    <div class="form-group">
                        <input asp-for="Description" class="form-control" placeholder=" Tipo de Documento" />

                    </div>
                    <div>
                        <span asp-validation-for="Description" class="text-danger"></span>

                      
                    </div>

                </div>

                <div class="form-group">

                    <button type="submit" value="" class="btn btn-success"><span>Guardar</span><span><i class="fas fa-download"></i></span> </button>
                    <a asp-action="Index" class="btn btn-secondary"><span>Regresar</span><span><i class="fas fa-undo"></i></span></a>
                
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}