<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0" />
    <title>@ViewData["Title"] - Vehicles.API</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/_layoutstile.css" />
    
    
    

    <script src="https://kit.fontawesome.com/17e56309fa.js" crossorigin="anonymous"></script>
    <script src="http://code.jquery.com/jquery-latest.js"></script>

</head>
<body>
    <div class="contenedor" >
        <nav class="menu">

            <section class="menu__container">


                <div class="contenedor-logo">
                    <div id="con1">
                        <img src="~/images/fuego.png" class="logoimage" />
                    </div>
                    <div id="con2">
                        <h3 class="menu__logo">Taller AutoMotriz</h3>
                    </div>

                </div>






                <ul class="menu__links">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {


                        <li class="menu__item menu__item--show menu_2 ">
                            <a href="#" class="menu__link ">Procediminentos <img src="~/images/flecha.svg" class="menu__arrow" /> </a>
                            <ul class="menu__nesting">
                                <li class="menu__inside">

                                    <a class="menu__link menu__link--inside" asp-area="" asp-controller="DocumentTypes" asp-action="Index"> Tipo de Documento</a>
                                </li>
                                <li class="menu__inside">

                                    <a class="menu__link menu__link--inside" asp-area="" asp-controller="Procedures" asp-action="Index"> Procedimientos</a>
                                </li>
                                <li class="menu__inside">
                                    <a class="menu__link menu__link--inside" asp-area="" asp-controller="Brands" asp-action="Index"> Marcas</a>

                                </li>
                                <li class="menu__inside">

                                    <a class="menu__link menu__link--inside" asp-area="" asp-controller="VehicleTypes" asp-action="Index">Tipos de Vehiculos</a>
                                </li>
                            </ul>
                        </li>

                        <li class="menu__item">
                            <a class="menu__link" asp-area="" asp-controller="Users" asp-action="Index">Usuarios</a>

                        </li>





                    }

                    <li class="menu__item">
                        <a class="menu__link" asp-area="" asp-controller="Account" asp-action="ChangeUser">@User.Identity.Name</a>
                    </li>
                    <li class="menu__item ">
                        <a class="menu__link submenu" asp-area="" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a>
                    </li>

                </ul>


                <div class="menu__hamburguer">
                    <img src="~/images/menu.svg" class="menu__img" />
                </div>
            </section>


        </nav>
    </div>

    <br />

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   <footer class="pie-pagina">
       <div class="grupo-1">
          
           <div class="box">
               
               <p>&copy; 2021 <b><a href="#">AG Disign</a></b>  - Todos Los Derechos Reservados.</p>
               
           </div>
           
           <div class="box">
               
               <div class="red-social">
                   <a href="#" class="fa fa-facebook"></a>
                   <a href="#" class="fa fa-instagram"></a>
                   <a href="#" class="fa fa-twitter"></a>
                   <a href="#" class="fa fa-youtube"></a>
               </div> 
           </div>
       </div>
       
   </footer> 

    <script src="~/js/app.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>